doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        link(rel="stylesheet", href="css/lender_test.css")

        title Database Test
    body
        table
            tr
                th Lender ID
                th First Name
                th Surname
                th Contact Number
            
            each lender in lenders
                tr
                    td= lender.lender_id
                    td= lender.first_name
                    td= lender.surname
                    td= lender.contact_number
